@model mfdev_backend_2023.Models.Consumo

@{
    ViewData["Title"] = "Excluir Consumo";
}

<div class="container mt-4">
    <!-- Adiciona um espaço no topo -->
    <h1 class="text-center">Excluir Consumo</h1> <!-- Centralizando o título -->
    <h4 class="text-center">Consumo</h4> <!-- Centralizando o subtítulo -->
    <hr />
    <p class="text-center">Tem certeza que deseja excluir este item?</p> <!-- Centralizando a mensagem -->

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-9">
            @Model.Data.ToShortDateString()
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Km)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Km)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Veiculo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Veiculo.Nome)
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="text-center">
        <!-- Centralizando o formulário -->
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>
