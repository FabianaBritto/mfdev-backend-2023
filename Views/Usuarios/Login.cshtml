@model mfdev_backend_2023.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #f0f0f0; /* Fundo cinza claro */
    }

    .login-container {
        max-width: 400px; /* Largura máxima do formulário */
        margin: auto; /* Centraliza o formulário */
        padding: 20px; /* Espaçamento interno */
        background-color: white; /* Fundo branco para o formulário */
        border-radius: 10px; /* Cantos arredondados */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
    }

    .btn-custom {
        background-color: #007bff; /* Azul claro para os botões */
        color: white; /* Texto branco para os botões */
        margin-top: 15px; /* Margem acima do botão para distanciar do campo de senha */
    }

        .btn-custom:hover {
            background-color: #0056b3; /* Azul mais escuro ao passar o mouse */
        }

    h1 {
        color: #000; /* Texto preto forte */
        text-align: center; /* Centraliza o título */
        margin-bottom: 20px; /* Espaçamento abaixo do título */
    }
</style>

<div class="login-container">
    <h1>Login</h1>

    @* Exibe a mensagem de erro, se houver *@
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label"></label>
            <input asp-for="Senha" type="password" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Acessar" class="btn btn-custom" />
        </div>
    </form>
    <div class="text-center">
        <p>Não tem uma conta? <a asp-action="Create">Crie uma nova conta</a></p>
    </div>
</div>
