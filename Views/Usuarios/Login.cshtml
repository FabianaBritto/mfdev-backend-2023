@model mfdev_backend_2023.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div>
    <form asp-action="Login" method="post">
        <div class="form-group">
            @* <label for="email">E-mail</label>
            <input type="email" id="email" class="form-control"> *@
            <label asp-for="Nome" class="control-label"></label>
            <input placeholder="Informe o nome de usuario..." asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            @* <label for="senha">Senha</label>
            <input type="password" id="senha" class="form-control"> *@
            <label asp-for="Senha" class="control-label"></label>
            <input placeholder="Informe sua senha..." asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
            <h3 class="fs-5 mt-4 mb-0">@ViewBag.Message</h3>
        </div>
        <div class="form-group">
            <input type="submit" value="Acessar" class="btn btn-success" />
        </div>
    </form>
    <h3>@ViewBag.Menssage</h3>
</div>
<div>
    <p>Não tem uma conta? <a asp-action="Create">Crie uma nova conta</a></p>
</div>
